<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	<!-- main layout -->
	<definition name="layout-tiles" template="/WEB-INF/views/tiles/tiles-layout2.jsp">
		<put-attribute name="header" value="/WEB-INF/views/tiles/templates/headerTemplate2.jsp"/>
		<put-attribute name="left" value="/WEB-INF/views/tiles/templates/sidebarTemplate2.jsp"/>
		<put-attribute name="body" value=""/>
		<put-attribute name="foot" value="/WEB-INF/views/tiles/templates/footerTemplate2.jsp"/>
	</definition>
	
	<definition name="*.tiles" extends="layout-tiles">
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp"/>
		<put-attribute name="title" value="게시판"/>
	</definition>
	<definition name="*/*.tiles" extends="layout-tiles">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
		<put-attribute name="title" value="게시판"/>
	</definition>
	<definition name="*/*/*.tiles" extends="layout-tiles">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
		<put-attribute name="title" value="게시판"/>
	</definition>
	
	<definition name="popup-tiles" template="/WEB-INF/views/tiles/popup-layout.jsp">
		<put-attribute name="body" value=""/>
	</definition>
	
	<definition name="*.popup" extends="popup-tiles">
		<put-attribute name="body" value="/WEB-INF/views/{1}.jsp"/>
		<put-attribute name="title" value="로그인"/>
	</definition>
	<definition name="*/*.popup" extends="popup-tiles">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
		<put-attribute name="title" value="로그인"/>
	</definition>
	<definition name="*/*/*.popup" extends="popup-tiles">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}/{3}.jsp"/>
		<put-attribute name="title" value="로그인"/>
	</definition>
</tiles-definitions>